{
  "name": "heimrichhannot/contao-overscroll-bundle",
  "type": "contao-bundle",
  "description": "This bundle offers overscroll functionality (as often used on news websites) for Contao pages.",
  "license": "LGPL-3.0+",
  "require": {
    "php": ">=5.6.0",
    "contao/core-bundle": "^4.4",
    "heimrichhannot/contao-blocks": "^1.1"
  },
  "require-dev": {
    "contao/manager-plugin": "^2.0",
    "phpunit/phpunit": "^4.5",
    "symfony/phpunit-bridge": "^2.8|^3.0"
  },
  "autoload": {
    "psr-4": {
      "HeimrichHannot\\OverscrollBundle\\": "src/"
    },
    "classmap": [
      "src/"
    ],
    "exclude-from-classmap": [
      "src/Resources/contao/config/",
      "src/Resources/contao/dca/",
      "src/Resources/contao/languages/",
      "src/Resources/contao/templates/"
    ]
  },
  "autoload-dev": {
  },
  "config": {
    "preferred-install": "dist"
  },
  "extra": {
    "contao-manager-plugin": "HeimrichHannot\\OverscrollBundle\\ContaoManager\\Plugin"
  }
}
